!!!
%html
  %head
    %title GPhelper
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %div.navbar#header
      = image_tag('/assets/logo1.jpg')
      %ul.nav.pull-right
        %li.divider-vertical
        %li= link_to "Home", root_path
        %li.divider-vertical
        %li= link_to "About"
        %li.divider-vertical
        - if user_signed_in?
          %li= link_to "Sign Out", destroy_user_session_path, method: :delete
          %li.divider-vertical
        - else
          %li= link_to "Sign In", new_user_session_path, :method => "get"
          %li.divider-vertical
    %p.notice= notice
    %p.alert= alert
    = yield
    = yield :scripts
/ !!!
